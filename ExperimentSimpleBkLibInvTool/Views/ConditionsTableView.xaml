<Window x:Class="ExperimentSimpleBkLibInvTool.Views.ConditionsTableView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentSimpleBkLibInvTool.Views"
        mc:Ignorable="d"
        Title="Conditions Table" Height="450" Width="800">
    <Grid>
        <DataGrid Name="ConditionsDataGrid" HorizontalAlignment="Left" Height="300" Margin="80,50,0,0" VerticalAlignment="Top" Width="300" ItemsSource="{Binding}"/>
        <Button Name="Btn_Conditions_Close" Content="Close" HorizontalAlignment="Left" Margin="470,50,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Conditions_Close_Click"/>
        <ListBox Name="LB_Conditions_Selector" HorizontalAlignment="Left" Height="100" Margin="470,115,0,0" VerticalAlignment="Top" Width="200" ItemsSource="{Binding}"/>
        <ComboBox Name="CB_Conditions_Selector" HorizontalAlignment="Left" Margin="470,265,0,0" VerticalAlignment="Top" Width="200" ItemsSource="{Binding}"/>
    </Grid>
</Window>
