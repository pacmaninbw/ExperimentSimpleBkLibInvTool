<Window x:Class="pacsw.BookInventory.Views.SeriesTableView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pacsw.BookInventory.Views"
        mc:Ignorable="d"
        Title="Series" MaxHeight="768" Width="390" FontWeight="Bold">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Height="23">
            <Button Content="Add Series" Name="Btn_SeriesAddSeries" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Background="Transparent" FontWeight="Bold" Click="Btn_SeriesAddSeries_Click"/>
            <Button Content="Close" Name="Btn_SeriesTableClose" HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Top" Width="75" Background="Red" FontWeight="Bold" Click="Btn_SeriesTableClose_Click"/>
        </StackPanel>
        <DataGrid Name="SeriesGrid" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Background="Transparent" ItemsSource="{Binding}"/>
    </Grid>
</Window>
