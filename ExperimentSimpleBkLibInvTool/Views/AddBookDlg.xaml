<Window x:Class="ExperimentSimpleBkLibInvTool.Views.AddBookDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentSimpleBkLibInvTool.Views"
        mc:Ignorable="d"
        Title="Add Book" Height="450" Width="800">
    <Grid>
        <Label Content="First Name" Name="Lab_BookFirstName" HorizontalAlignment="Left" Margin="62,43,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Name="TxtBx_BookFirstName" Height="22" Margin="159,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Middle Name" Name="Lab_BookMiddleName" HorizontalAlignment="Left" Margin="62,88,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Name="TxtBx_BookMiddleName" Height="22" Margin="159,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Label Content="Last Name" Name="Lab_BookLastName" HorizontalAlignment="Left" Margin="62,133,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Name="TxtBx_BookLastName" Height="22" Margin="159,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Save" Name="Btn_AddBookSave" HorizontalAlignment="Center" Margin="0,260,0,0" VerticalAlignment="Top" Width="75" Click="Btn_AddBookSave_Click"/>
    </Grid>
</Window>
