<Window x:Class="ExperimentSimpleBkLibInvTool.Views.FormatTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentSimpleBkLibInvTool.Views"
        mc:Ignorable="d"
        Title="Format Table" Height="587" Width="844">
    <Grid Margin="0,0,162,0">
        <Image Stretch="None" Source="/Images/Chernick-Consulting-1-6-11.png" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="0,10,0,0"/>
        <Button Content="Add Format" Name="Btn_FormatsAddFormat" HorizontalAlignment="Left" Margin="120,30,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Background="Transparent" FontWeight="Bold" Click="Btn_FormatsAddFormat_Click"/>
        <Button Content="Close" Name="Btn_FormatsTableClose" HorizontalAlignment="Left" Margin="495,30,0,0" VerticalAlignment="Top" Width="75" Background="Red" FontWeight="Bold" Click="Btn_FormatsTableClose_Click"/>
        <DataGrid Name="FormatsGrid" HorizontalAlignment="Left" Height="450" Margin="10,85,0,0" VerticalAlignment="Top" Width="650" Background="Transparent" ItemsSource="{Binding}"/>
    </Grid>
</Window>
