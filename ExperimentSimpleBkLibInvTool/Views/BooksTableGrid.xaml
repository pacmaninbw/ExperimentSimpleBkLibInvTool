<Window x:Class="ExperimentSimpleBkLibInvTool.Views.BooksTableGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentSimpleBkLibInvTool.Views"
        mc:Ignorable="d"
        Title="My Books" Height="763" Width="1024">
    <Grid>
        <Image Stretch="None" Source="/Images/Chernick-Consulting-1-6-11.png" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="83,10,107,137"/>
        <Button Content="Add Book" Name="Btn_BooksAddBook" HorizontalAlignment="Left" Margin="80,30,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="Btn_BooksAddBook_Click" Background="Transparent" FontWeight="Bold"/>
        <Button Content="Close" Name="Btn_BooksTableClose" HorizontalAlignment="Left" Margin="875,30,0,0" VerticalAlignment="Top" Width="75" Click="Btn_BooksTableClose_Click" Background="Red" FontWeight="Bold"/>
        <DataGrid Name="BooksGrid" HorizontalAlignment="Left" Height="530" Margin="65,105,0,0" VerticalAlignment="Top" Width="890" Background="Transparent" ItemsSource="{Binding}"/>
    </Grid>
</Window>
